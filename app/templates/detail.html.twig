{% extends "base.html.twig" %}

{% block title %}
    Mars Rover Detail
{%  endblock %}

{% block body %}
    <h3>Mars Rover detail</h3>

    <div>
        <div>
            <span>Id: </span>
            <span>{{ mars_rover.id }}</span>
        </div>
        <div>
            <span>Name: </span>
            <span>{{ mars_rover.name }}</span>
        </div>
        <div>
            <span>Position: </span>
            <span>({{ mars_rover.position.x }}, {{ mars_rover.position.y }})</span>
        </div>
        <div>
            <span>Orientation: </span>
            <span>{{ mars_rover.orientation }}</span>
        </div>
        <div>
            <h4>Stats</h4>
            <div>
                <span>Odometer: </span>
                <span>{{ mars_rover.stats.odometer }}</span>
            </div>
            <div>
                <span>Swerves: </span>
                <span>{{ mars_rover.stats.swerves }}</span>
            </div>
        </div>
    </div>

    <hr/>

    <div>
        <h3>Actions</h3>

        <form action="/detail/{{ mars_rover.id }}/move_forward" method="post">
            <input type="submit" value="Move forward">
        </form>

        <form action="/detail/{{ mars_rover.id }}/move_backward" method="post">
            <input type="submit" value="Move backward">
        </form>

        <form action="/detail/{{ mars_rover.id }}/turn_left" method="post">
            <input type="submit" value="Turn left">
        </form>

        <form action="/detail/{{ mars_rover.id }}/turn_right" method="post">
            <input type="submit" value="Turn right">
        </form>
    </div>

{%  endblock %}
